<%= flash[:notice] %>
<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
     </tbody>
    </table>

    <div class="row">
      <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block edit_user_id" do  %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

       <h2 class="mt-3">New Book</h2>


       <%= form_with model: Book.new do |f| %>
       <div class="form-group">

         <label for="book-title">Title</label>
          <%= f.text_field :title %>
       </div>
       <div class="form-group">
         <label for="book_opinion">Opinion</label>
           <%= f.text_area :body %>
       </div>
         <div class="form-group">
           <%= f.submit 'Create Book' %>
         </div>
         <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
         <tr>
           <td><%= link_to @user.name,user_path(@user.id) %> <%= image_tag @user.get_profile_image(100,100) %></td>
           <td><%= link_to @book.title,book_path(@book.id) %></td>
           <td><%= @book.body %></td>
           <td><button type="button" class="btn btn-success">
               <%= link_to "Edit", edit_book_path(@book.id) %></button>
           </td>
           <td>
               <button type="button" class="btn btn-danger">
               <% if @book.user == current_user %>
               <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消ししますか？" %>
               </button>
               <% end %>

           </td>
         </tr>
        </tbody>
      </table>
    </div>
   </div>
  </div>
</main>