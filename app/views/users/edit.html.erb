<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

         <% if @user.errors.any? %>
       <%= @user.errors.count %>errors prohibited this obj from being saved:
       <ul>
         <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     <% end %>

        <%= form_with model: @user do |f| %>
        <div class="rorm-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="rorm-group">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="rorm-group">
          <label for="inputName">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"詳細"%>
        </div>
        <div class="rorm-group">
          <button type="button" class="btn btn-success"><%= f.submit 'Update User' %></button>
        </div>  
        <% end %>
      </div>
    </div>
  </div>
</main>

